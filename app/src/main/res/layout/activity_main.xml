<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context="com.android.charan.shareride.MainActivity"
    style="@style/basicRelativeLayoutOverBackground">

    <Button
        android:id="@+id/CreateRide"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/cast_intro_overlay_button_margin_bottom"
        android:layout_marginRight="@dimen/cast_intro_overlay_button_margin_bottom"
        android:text="@string/createridebtn" />

    <Button
        android:id="@+id/ShowMyRide"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/cast_intro_overlay_button_margin_bottom"
        android:layout_marginRight="@dimen/cast_intro_overlay_button_margin_bottom"
        android:layout_marginTop="5dp"
        android:text="@string/showMyRides" />

</LinearLayout>